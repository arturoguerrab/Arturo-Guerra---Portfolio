import { useContext } from "react";
import { DataContext } from "../../../../context/DataContextProvider";
import ToggleButton from "@mui/material/ToggleButton";

const ToggleLanguage = () => {
	const { ChangeLanguage, language } = useContext(DataContext);

	return (
		<div className="col-span-2 xl:col-span-1 flex justify-center py-1">
				<ToggleButton
					size="small"
					value="check"
					onChange={() => {
						ChangeLanguage();
					}}
				>
					{!language ? "en" : "es"}
				</ToggleButton>
		</div>
	);
};

export default ToggleLanguage;
